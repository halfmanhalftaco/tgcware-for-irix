[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.gnu.org/software/libtool/libtool.html"
shortdesc="Generic library support script"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[info]
subsys=man.info
files(-,root,sys)
$_infodir/libtool.info*

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

