[common]
pkgname="$pkgprefix""$pkgdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.sleepycat.com/products/bdb.html"
shortdesc="The Berkeley DB database library"

[base]
subsys=sw.base
files(-,root,sys)
${bdbdir}/$_bindir

[lib]
subsys=sw.lib
files(-,root,sys)
${bdbdir}/$_libdir/libdb-*.so
${bdbdir}/$_docdir

[doc]
subsys=man.doc
files(-,root,sys)
${bdbdir}/docs

[devel]
subsys=sw.dev
files(-,root,sys)
${bdbdir}/$_includedir
${bdbdir}/$_libdir/libdb.so
${bdbdir}/$_libdir/*.a

