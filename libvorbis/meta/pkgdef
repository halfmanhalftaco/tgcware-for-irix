[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.vorbis.com"
shortdesc="The Vorbis General Audio Compression Codec"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_vdocdir/AUTHORS
$_vdocdir/COPYING

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/*.png
$_vdocdir/*.txt
$_vdocdir/*.html
$_vdocdir/*.xml
$_vdocdir/vorbisenc
$_vdocdir/vorbisfile

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a
$_libdir/pkgconfig/*.pc
$_sharedir/aclocal/*.m4

