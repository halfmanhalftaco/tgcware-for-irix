[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.kde.org"
shortdesc="KDE libraries"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sysconfdir
$_sharedir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_libdir/kde3

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a
$_libdir/*.la

