[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://subversion.tigris.org"
shortdesc="Modern Version Control System designed to replace CVS"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_docdir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_sharedir/locale

[man]
subsys=man.man
files(-,root,sys)
$_mandir/?a?[12456789]

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir/subversion*
$_libdir/*.so
$_libdir/*.a

