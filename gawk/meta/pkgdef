[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://directory.fsf.org/gawk.html"
shortdesc="The awk text processing utility"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
libexec/awk
$_sharedir/locale
$_sharedir/awk
$_vdocdir/AUTHORS
$_vdocdir/COPYING
$_vdocdir/FUTURES
$_vdocdir/LIMITATIONS
$_vdocdir/NEWS
$_vdocdir/POSIX.STD
$_vdocdir/README
$_vdocdir/PROBLEMS

[man]
subsys=man.man
files(-,root,sys)
$_mandir/?a?[12456789]

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/*.ps

[info]
subsys=man.info
files(-,root,sys)
$_infodir

