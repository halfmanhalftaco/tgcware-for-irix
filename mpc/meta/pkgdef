[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://mpc.multiprecision.org/"
shortdesc="A library for multiprecision complex arithmetic with exact rounding"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_docdir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

