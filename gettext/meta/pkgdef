[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://directory.fsf.org/gettext.html"
shortdesc="Tools to produce multi-lingual messages"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_libdir/gettext/*
$_sharedir/aclocal
$_sharedir/gettext
$_sharedir/locale
$_docdir/$topdir-$version

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_libdir/libgettextlib-${version}.so
$_libdir/libgettextsrc-${version}.so

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

[doc]
subsys=man.doc
files(-,root,sys)
$_docdir/gettext
$_docdir/libasprintf

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.a
$_libdir/*.la
$_libdir/libasprintf.so
$_libdir/libgettextlib.so
$_libdir/libgettextpo.so
$_libdir/libgettextsrc.so
$_libdir/libintl.so

