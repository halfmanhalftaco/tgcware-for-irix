[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://savannah.nongnu.org/projects/cvs/"
shortdesc="Version control system"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
${_sharedir}/cvs
${_docdir}/*/FAQ
${_docdir}/*/README
${_docdir}/*/NEWS
${_docdir}/*/COPYING*

[otherdoc]
subsys=man.doc
files(-,root,sys)
${_docdir}/*/doc

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

