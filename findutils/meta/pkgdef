[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://directory.fsf.org/findutils.html"
shortdesc="Tools to find files and to operate on groups of files"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir
libexec

[man]
subsys=man.man
files(-,root,sys)
$_mandir/?a?[12456789]

[info]
subsys=man.info
files(-,root,sys)
$_infodir

