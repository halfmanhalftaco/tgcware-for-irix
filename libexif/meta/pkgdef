[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://libexif.sourceforge.net"
shortdesc="The libexif C EXIF library"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_sharedir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a
$_libdir/pkgconfig

