[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
shortdesc="GNU core utilities - commonly used utility applications"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

