[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://freshmeat.net/projects/compface"
shortdesc="Utilities and a library for converting to and from the X-Face format"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir/?a?[12456789]

[mandev]
subsys=man.dev
files(-,root,sys)
$_mandir/?a?3

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.a

