[common]
pkgname="${pkgprefix}${topdir}"
name="$topdir"
pkgver="$pkgver"
shortdesc="Terminal multiplexer"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir/screen
$_sharedir
$_sysconfdir
files(4755,root,sys)
$_bindir/screen-*

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

