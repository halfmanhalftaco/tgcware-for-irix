[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://apr.apache.org"
shortdesc="Apache Portable Runtime library"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_vdocdir/{CHANGES,LICENSE,NOTICE}
$_vdocdir/docs

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/html

[devel]
subsys=sw.dev
files(-,root,sys)
$_bindir/ap*config
$_includedir/apr*
$_libdir/*.so
$_libdir/*.a
$_libdir/apr*
$_libdir/pkgconfig/*

