[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.mpfr.org"
shortdesc="C library for multiple-precision floating-point computations with exact rounding"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_sharedir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

