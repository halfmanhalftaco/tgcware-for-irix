[common]
pkgname="${pkgprefix}${topdir}"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.gnu.org/software/autoconf/"
shortdesc="Produces shell scripts which automatically configure source code"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

