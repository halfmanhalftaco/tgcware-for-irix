[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.vim.org"
shortdesc="An improved almost compatible version of Vi"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir/ex
$_bindir/rview
$_bindir/rvim
$_bindir/view
$_bindir/vim
$_bindir/vimdiff
$_bindir/vimtutor
$_bindir/xxd
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir/cat1/evim*
$_mandir/cat1/ex*
$_mandir/cat1/rview*
$_mandir/cat1/rvim*
$_mandir/cat1/view*
$_mandir/cat1/vim*
$_mandir/cat1/xxd*
$_mandir/cat1/g*

[motif]
subsys=sw.motif
files(-,root,sys)
$_bindir/gvim
$_bindir/gvimdiff
$_bindir/gview

