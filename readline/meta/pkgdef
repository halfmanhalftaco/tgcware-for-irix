[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://cnswww.cns.cwru.edu/php/chet/readline/rltop.html"
shortdesc="Lets users edit command lines as they are typed in"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

