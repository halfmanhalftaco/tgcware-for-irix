[common]
pkgname="$pkgprefix""$pkgdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.sleepycat.com/products/bdb.html"
shortdesc="The Berkeley DB database library"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/libdb-*.so
$_vdocdir/{LICENSE,README}

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/api*
$_vdocdir/collections
$_vdocdir/gsg
$_vdocdir/gsg_txn
$_vdocdir/images
$_vdocdir/index.html
$_vdocdir/java
$_vdocdir/ref
$_vdocdir/sleepycat
$_vdocdir/utility

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/libdb.so
$_libdir/*.a

