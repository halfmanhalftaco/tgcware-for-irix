[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://dickey.his.com/ncurses/ncurses.html"
shortdesc="Displays and updates text on text-only terminals"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_docdir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_libdir/terminfo
$_sharedir/terminfo
$_sharedir/tabset

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.a
$_libdir/*.so

