[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.gnu.org/software/bison/bison.html"
shortdesc="Replacement for the parser generator 'yacc'"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[info]
subsys=man.info
files(-,root,sys)
$_infodir

[devel]
subsys=sw.dev
files(-,root,sys)
$_libdir/*.a

