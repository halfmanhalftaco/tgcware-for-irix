[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.graphviz.org"
shortdesc="Graph Visualization Software"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir/graphviz

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/graphviz/*.so.*
$_vdocdir/AUTHORS
$_vdocdir/COPYING
$_vdocdir/NEWS
$_vdocdir/cpl1.0.txt

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/html
$_vdocdir/Dot.ref
$_vdocdir/latex_suggestions.txt
$_vdocdir/pdf
$_vdocdir/ChangeLog

[man]
subsys=man.man
files(-,root,sys)
$_mandir/?a?[12456789]

[mandev]
subsys=man.dev
files(-,root,sys)
$_mandir/?a?3

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/graphviz/*.so
$_libdir/graphviz/*.a
$_libdir/pkgconfig

