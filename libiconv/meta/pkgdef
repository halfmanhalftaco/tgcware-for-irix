[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://directory.fsf.org/libiconv.html"
shortdesc="Converts between character encodings"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir
$_docdir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a
$_libdir/*.la

