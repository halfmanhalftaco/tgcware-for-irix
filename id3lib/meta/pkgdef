[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://id3lib.sourceforge.net"
shortdesc="Library for manipulating ID3v1 and ID3v2 tags"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_vdocdir/AUTHORS
$_vdocdir/COPYING
$_vdocdir/ChangeLog
$_vdocdir/HISTORY
$_vdocdir/NEWS
$_vdocdir/README
$_vdocdir/THANKS
$_vdocdir/TODO
$_vdocdir/doc

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_vdocdir/examples

