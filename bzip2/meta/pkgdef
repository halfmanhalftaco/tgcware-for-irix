[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://sources.redhat.com/bzip2/"
shortdesc="bzip2 compression library and utilities"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_sharedir
$_docdir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

