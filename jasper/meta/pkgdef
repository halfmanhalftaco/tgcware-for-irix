[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.ece.uvic.ca/~mdadams/jasper/"
shortdesc="An opensource implementation of the JPEG 2000 codec"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir
$_vdocdir/NEWS
$_vdocdir/LICENSE

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[doc]
subsys=man.doc
files(-,root,sys)
$_vdocdir/doc

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

