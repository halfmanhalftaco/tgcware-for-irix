[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.pcre.org"
shortdesc="Perl Compatible Regular Expressions"

[base]
subsys=sw.base
files(-,root,sys)
$_bindir/pcregrep
$_bindir/pcretest
$_sharedir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[devel]
subsys=sw.dev
files(-,root,sys)
$_bindir/pcre-config
$_includedir
$_libdir/*.so
$_libdir/*.a
$_libdir/*.la
$_libdir/pkgconfig/*.pc

