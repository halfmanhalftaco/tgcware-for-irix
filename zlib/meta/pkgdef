[common]
pkgname="${pkgprefix}${topdir}"
name="$topdir"
pkgver="$pkgver"
pkgvendor="http://www.zlib.org"
shortdesc="Data compression library"

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*
$_vdocdir/README

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[doc}
subsys=man.doc
files(-,root,sys)
$_vdocdir/FAQ
$_vdocdir/ChangeLog
$_vdocdir/*.c
$_vdocdir/doc

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/pkgconfig/zlib.pc

