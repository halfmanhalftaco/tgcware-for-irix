[common]
pkgname="$pkgprefix""$topdir"
name="$topdir"
pkgver="$pkgver"
shortdesc="data compression library"

[doc]
subsys=man.doc
files(-,root,sys)
$_docdir

[lib]
subsys=sw.lib
files(-,root,sys)
$_libdir/*.so.*

[man]
subsys=man.man
files(-,root,sys)
$_mandir

[devel]
subsys=sw.dev
files(-,root,sys)
$_includedir
$_libdir/*.so
$_libdir/*.a

